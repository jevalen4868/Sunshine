<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:id="@+id/location_preference"
        android:defaultValue="@string/pref_location_default"
        android:inputType="number"
        android:key="@string/location_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/location_title" />
    <ListPreference
        android:defaultValue="@string/default_unit"
        android:entries="@array/unit_keys"
        android:entryValues="@array/unit_values"
        android:key="@string/pref_location_key"
        android:summary="%s"
        android:title="@string/unit_title"></ListPreference>
</PreferenceScreen>
